{
	"name": "sapper-tailwindcs-boilerplate",
	"description": "Boilerplate for Sapper working with tailwindcss",
	"version": "0.0.1",
	"scripts": {
		"watch:tailwind": "postcss static/tailwind.css -o static/global.css -w",
		"build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/global.css",
		"dev:tailwind": "postcss static/tailwind.css -o static/global.css",
		"dev": "npm run dev:tailwind && sapper dev --port 8080",
		"build": "npm run build:tailwind && sapper build --port 443",
		"export": "npm run build:tailwind && sapper export --legacy",
		"start": "node __sapper__/build",
		"cy:run": "cypress run",
		"cy:open": "cypress open",
		"test": "run-p --race dev cy:run"
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^5.12.0",
		"@fullhuman/postcss-purgecss": "^1.3.0",
		"apexcharts": "^3.12.0",
		"compression": "^1.7.1",
		"node-fetch": "^2.6.0",
		"polka": "next",
		"sirv": "^0.4.0",
		"svelte-heatmap": "^0.4.0",
		"svelte-toast": "^0.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.0.0",
		"@babel/plugin-syntax-dynamic-import": "^7.0.0",
		"@babel/plugin-transform-runtime": "^7.0.0",
		"@babel/preset-env": "^7.0.0",
		"@babel/runtime": "^7.0.0",
		"fa-svelte": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.3",
		"rollup": "^1.12.0",
		"rollup-plugin-babel": "^4.0.2",
		"rollup-plugin-commonjs": "^10.0.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-replace": "^2.0.0",
		"rollup-plugin-svelte": "^5.0.1",
		"rollup-plugin-terser": "^4.0.4",
		"sapper": "^0.27.0",
		"svelte": "^3.49.0",
		"svelte-calendar": "^1.3.4",
		"tailwindcss": "^1.1.2",
		"tailwindcss-spinner": "^1.0.0",
		"tailwindcss-transforms": "^2.2.0",
		"tailwindcss-transitions": "^2.1.0"
	}
}
